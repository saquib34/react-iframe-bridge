{
  "name": "iframes",
  "version": "1.0.0",
  "description": "A React library for secure bidirectional communication between parent pages and iframe children",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf dist",
    "compile": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "preversion": "npm run lint && npm run test",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "react",
    "iframe",
    "postMessage",
    "communication",
    "bridge",
    "typescript",
    "security",
    "cross-origin"
  ],
  "author": "Mohammad Saquib Daiyan (shadmanshahin6@gmail.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saquib34/react-iframe-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/saquib34/react-iframe-bridge/issues"
  },
  "homepage": "https://github.com/saquib34/react-iframe-bridge#readme",
  "dependencies": {
    "uuid": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.40.0",
    "eslint-config-eslint": "^11.0.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.0.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.8",
    "rimraf": "^6.0.1",
    "rollup": "^4.43.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
